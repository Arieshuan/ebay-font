{
    "extends": "./node_modules/eslint-config-ebay/legacy.js",
    "env": {
        "mocha": true,
        "jquery": true
    },
    "globals": {
        "FontFaceObserver": false
    },
    "rules": {
        "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
        "max-len": [1, 400, 4, {"ignoreUrls": true}],
        "one-var": [2, "never"],
        "linebreak-style": [2, "unix"],
        "no-multiple-empty-lines": [2, {"max": 1, "maxBOF": 0}],
        "space-unary-ops": 2,
        "operator-linebreak": 2,
        "quotes": [2, "single"],
        "no-use-before-define": [1, "nofunc"],
        "curly": [2, "all"],
        "no-shadow": 0,
        "object-curly-spacing": 0,
        "no-unused-expressions": 0,
        "no-else-return": 0,
        "no-param-reassign": 0,
        "consistent-return": 0,
        "radix": 0,
        "wrap-iife": 0,
        "no-new": 0,
        "no-script-url": 0,
        "no-empty": 0
    }
}
